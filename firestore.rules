rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOneOfRoles(array) {
      return request.auth.token.role in array;
    }

    function updateOnlyFields(allowedFields) {
      return request.resource.data.diff(resource.data).changedKeys().hasOnly(allowedFields)
    }

    function myDocument(userId) {
      return request.auth.uid == userId
    }

    match /{document=**} {
      allow read, write: if false
    }

    match /users/{userId} {
      allow read: if true;
      allow update: if (myDocument(userId) && updateOnlyFields(['avatar','displayName']));
      allow update: if (isOneOfRoles(['MODERATOR', 'SUPER_USER']) && updateOnlyFields(['role']));
    }

    match /projects/{projectId} {
      allow read: if true;
      allow write: if (isOneOfRoles(['MODERATOR', 'SUPER_USER']));
    }
  }
}


